{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"declaration": false,
		"outDir": "../../dist/"
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"dist",
		"test",
		"**/*spec.ts"
	],
	"paths": {
		"@app/auth/application": [
			"apps/auth/src/application"
		],
		"@app/auth/application/*": [
			"apps/auth/src/application/*"
		],
		"@app/auth/database": [
			"apps/auth/src/database"
		],
		"@app/auth/database/*": [
			"apps/auth/src/database/*"
		],
		"@app/auth/domain": [
			"apps/auth/src/domain"
		],
		"@app/auth/domain/*": [
			"apps/auth/src/domain/*"
		],
		"@app/auth/infrastructure": [
			"apps/auth/src/infrastructure"
		],
		"@app/auth/infrastructure/*": [
			"apps/auth/src/infrastructure/*"
		],
		"@app/auth/presentation": [
			"apps/auth/src/presentation"
		],
		"@app/auth/presentation/*": [
			"apps/auth/src/presentation/*"
		]
	}
}