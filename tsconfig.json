{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@app/common": [
        "libs/common/src"
      ],
      "@app/common/*": [
        "libs/common/src/*"
      ],
      "@app/auth/application": [
        "apps/auth/src/application"
      ],
      "@app/auth/application/*": [
        "apps/auth/src/application/*"
      ],
      "@app/auth/database": [
        "apps/auth/src/database"
      ],
      "@app/auth/database/*": [
        "apps/auth/src/database/*"
      ],
      "@app/auth/domain": [
        "apps/auth/src/domain"
      ],
      "@app/auth/domain/*": [
        "apps/auth/src/domain/*"
      ],
      "@app/auth/infrastructure": [
        "apps/auth/src/infrastructure"
      ],
      "@app/auth/infrastructure/*": [
        "apps/auth/src/infrastructure/*"
      ],
      "@app/auth/presentation": [
        "apps/auth/src/presentation"
      ],
      "@app/auth/presentation/*": [
        "apps/auth/src/presentation/*"
      ],
			"@app/auth/common": [
				"apps/auth/src/common"
			],
			"@app/auth/common/*": [
				"apps/auth/src/common/*"
			]
    }
  }
}